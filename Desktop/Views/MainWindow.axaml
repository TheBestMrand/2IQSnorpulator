<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Desktop.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:avaloniaEdit="https://github.com/avaloniaui/avaloniaedit"
        mc:Ignorable="d" d:DesignWidth="1400" d:DesignHeight="900"
        x:Class="Desktop.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="2IQSnorpulator"
        Width="1400" Height="900"
        Background="#0a0a0a">

    <Window.Styles>
        <Style Selector="Button.header-btn">
            <Setter Property="Padding" Value="8,8"/>
            <Setter Property="Background" Value="#141414"/>
            <Setter Property="BorderBrush" Value="#2a2a2a"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Foreground" Value="#e0e0e0"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        <Style Selector="Button.header-btn:pointerover">
            <Setter Property="Background" Value="#1f1f1f"/>
        </Style>
        <Style Selector="Button.primary-btn">
            <Setter Property="Background" Value="#ffffff"/>
            <Setter Property="Foreground" Value="#000000"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style Selector="Button.primary-btn:pointerover">
            <Setter Property="Background" Value="#e8e8e8"/>
        </Style>
        <Style Selector="TextBox.dark-input">
            <Setter Property="Background" Value="#141414"/>
            <Setter Property="BorderBrush" Value="#2a2a2a"/>
            <Setter Property="Foreground" Value="#e0e0e0"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="CornerRadius" Value="6"/>
        </Style>
        <Style Selector="ComboBox.dark-combo">
            <Setter Property="Background" Value="#141414"/>
            <Setter Property="BorderBrush" Value="#2a2a2a"/>
            <Setter Property="Foreground" Value="#e0e0e0"/>
        </Style>
        
        <!-- AvaloniaEdit Styles -->
        <Style Selector="avaloniaEdit|TextEditor">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontFamily" Value="Courier New"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="LineNumbersForeground" Value="#858585"/>
            <Setter Property="ShowLineNumbers" Value="True"/>
            <Setter Property="WordWrap" Value="True"/>
        </Style>
    </Window.Styles>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Environment Management Overlay -->
        <Border Grid.Row="0" Grid.RowSpan="2" 
                Background="#CC000000" 
                IsVisible="{Binding IsManagingEnvironments}"
                ZIndex="1000">
            <Border Background="#0f0f0f" BorderBrush="#2a2a2a" BorderThickness="2" 
                    CornerRadius="8" Padding="20" MaxWidth="500" MaxHeight="600"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,16">
                        <TextBlock Text="Manage Environments" FontSize="18" FontWeight="SemiBold" 
                                   Foreground="White" VerticalAlignment="Center"/>
                        <Button Content="âœ•" Background="Transparent" BorderThickness="0"
                                Padding="8" Foreground="#888" FontSize="18" HorizontalAlignment="Right"
                                Command="{Binding ToggleManageEnvironmentsCommand}"/>
                    </Grid>

                    <!-- Environments List -->
                    <ScrollViewer Grid.Row="1" Margin="0,0,0,16">
                        <StackPanel Spacing="8">
                            <!-- Create New Environment -->
                            <Border Background="#141414" BorderBrush="#2a2a2a" BorderThickness="1" 
                                    CornerRadius="6" Padding="12">
                                <Grid ColumnDefinitions="*,Auto">
                                    <TextBox Grid.Column="0" Text="{Binding NewEnvironmentName}" 
                                             Classes="dark-input" Watermark="New environment name..."
                                             Padding="8,6" FontSize="13" AcceptsTab="False"/>
                                    <Button Grid.Column="1" Content="+ Create" 
                                            Background="#1a4d2e" Foreground="#4ade80"
                                            BorderThickness="0" Padding="12,6" CornerRadius="4"
                                            Margin="8,0,0,0" FontWeight="SemiBold"
                                            Command="{Binding CreateEnvironmentCommand}"/>
                                </Grid>
                            </Border>

                            <!-- Existing Environments -->
                            <ItemsControl ItemsSource="{Binding Environments}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#141414" BorderBrush="#2a2a2a" BorderThickness="1" 
                                                CornerRadius="6" Padding="12" Margin="0,0,0,8">
                                            <Grid ColumnDefinitions="*,Auto,Auto">
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding Name}" FontSize="14" 
                                                               FontWeight="SemiBold" Foreground="White"/>
                                                    <TextBlock Text="{Binding Variables.Count, StringFormat='{}{0} variables'}" 
                                                               FontSize="12" Foreground="#666" Margin="0,4,0,0"/>
                                                </StackPanel>
                                                
                                                <Button Grid.Column="1" Content="âœ" 
                                                        Background="Transparent" BorderThickness="0"
                                                        Padding="8,4" Foreground="#4ade80" FontSize="14"
                                                        Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).EditEnvironmentVariablesCommand}"
                                                        CommandParameter="{Binding}"
                                                        ToolTip.Tip="Edit variables"
                                                        Margin="0,0,4,0"/>
                                                
                                                <Button Grid.Column="2" Content="ðŸ—‘" 
                                                        Background="Transparent" BorderThickness="0"
                                                        Padding="8,4" Foreground="#f87171" FontSize="14"
                                                        Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).DeleteEnvironmentCommand}"
                                                        CommandParameter="{Binding}"
                                                        ToolTip.Tip="Delete environment"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Footer -->
                    <Border Grid.Row="2" BorderBrush="#2a2a2a" BorderThickness="0,1,0,0" Padding="0,16,0,0">
                        <TextBlock Text="ðŸ’¡ Tip: Use variables in requests with {$varName} syntax" 
                                   FontSize="12" Foreground="#666" TextWrapping="Wrap"/>
                    </Border>
                </Grid>
            </Border>
        </Border>

        <!-- Environment Variables Editor Overlay -->
        <Border Grid.Row="0" Grid.RowSpan="2" 
                Background="#CC000000" 
                IsVisible="{Binding IsEnvironmentEditorOpen}"
                ZIndex="1001">
            <Border Background="#0f0f0f" BorderBrush="#2a2a2a" BorderThickness="2" 
                    CornerRadius="8" Padding="20" MaxWidth="600" MaxHeight="500"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid RowDefinitions="Auto,*,Auto">
                    <Grid Grid.Row="0" Margin="0,0,0,16">
                        <TextBlock Text="{Binding EditingEnvironment.Name, StringFormat='Edit Variables - {0}'}" 
                                   FontSize="18" FontWeight="SemiBold" Foreground="White"/>
                        <Button Content="âœ•" Background="Transparent" BorderThickness="0"
                                Padding="8" Foreground="#888" FontSize="18" HorizontalAlignment="Right"
                                Command="{Binding CancelEnvironmentEditCommand}"/>
                    </Grid>

                    <ScrollViewer Grid.Row="1" Margin="0,0,0,16">
                        <StackPanel Spacing="8">
                            <ItemsControl ItemsSource="{Binding EnvironmentVariables}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid ColumnDefinitions="*,*,Auto" Margin="0,0,0,8">
                                            <TextBox Grid.Column="0" Text="{Binding Key}" 
                                                     Classes="dark-input" Watermark="Variable name"
                                                     Padding="8,6" FontSize="13" Margin="0,0,4,0" AcceptsTab="False"/>
                                            <TextBox Grid.Column="1" Text="{Binding Value}" 
                                                     Classes="dark-input" Watermark="Value"
                                                     Padding="8,6" FontSize="13" Margin="4,0,4,0" AcceptsTab="False"/>
                                            <Button Grid.Column="2" Content="Ã—" 
                                                    Background="Transparent" BorderBrush="#2a2a2a" BorderThickness="1"
                                                    Padding="8,6" Foreground="#f87171" FontSize="14"
                                                    Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).RemoveEnvironmentVariableCommand}"
                                                    CommandParameter="{Binding}"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <Button Content="+ Add Variable" 
                                    Background="#141414" BorderBrush="#2a2a2a" BorderThickness="1"
                                    CornerRadius="4" Padding="8,6" Foreground="#4ade80"
                                    HorizontalAlignment="Left"
                                    Command="{Binding AddEnvironmentVariableCommand}"/>
                        </StackPanel>
                    </ScrollViewer>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="12" HorizontalAlignment="Right">
                        <Button Content="Cancel" 
                                Background="#141414" BorderBrush="#2a2a2a" BorderThickness="1"
                                Padding="20,8" CornerRadius="4" Foreground="White"
                                Command="{Binding CancelEnvironmentEditCommand}"/>
                        <Button Content="Save Variables" 
                                Background="#1a4d2e" Foreground="#4ade80"
                                BorderThickness="0" Padding="20,8" CornerRadius="4" FontWeight="SemiBold"
                                Command="{Binding SaveEnvironmentVariablesCommand}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>

        <!-- Save Request Dialog -->
        <Border Grid.Row="0" Grid.RowSpan="2" 
                Background="#CC000000" 
                IsVisible="{Binding IsSaveDialogOpen}"
                ZIndex="1002">
            <Border Background="#0f0f0f" BorderBrush="#2a2a2a" BorderThickness="2" 
                    CornerRadius="8" Padding="20" MaxWidth="500"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto">
                    <TextBlock Grid.Row="0" Text="Save Request" FontSize="18" FontWeight="SemiBold" 
                               Foreground="White" Margin="0,0,0,16"/>

                    <StackPanel Grid.Row="1" Spacing="8" Margin="0,0,0,16">
                        <TextBlock Text="Request Name" FontSize="13" Foreground="#888"/>
                        <TextBox Text="{Binding SaveDialogRequestName}" 
                                 Classes="dark-input" Watermark="Enter request name..."
                                 Padding="10,8" FontSize="13" AcceptsTab="False"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Spacing="8" Margin="0,0,0,16">
                        <TextBlock Text="Select Collection" FontSize="13" Foreground="#888"/>
                        <ComboBox SelectedItem="{Binding SaveDialogSelectedCollection}" 
                                  ItemsSource="{Binding Collections}"
                                  Classes="dark-combo" Padding="10,8" FontSize="13">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Row="3" Spacing="8" Margin="0,0,0,20">
                        <TextBlock Text="Or Create New Collection" FontSize="13" Foreground="#888"/>
                        <TextBox Text="{Binding SaveDialogNewCollectionName}" 
                                 Classes="dark-input" Watermark="New collection name..."
                                 Padding="10,8" FontSize="13" AcceptsTab="False"/>
                    </StackPanel>

                    <StackPanel Grid.Row="4" Orientation="Horizontal" Spacing="12" HorizontalAlignment="Right">
                        <Button Content="Cancel" 
                                Background="#141414" BorderBrush="#2a2a2a" BorderThickness="1"
                                Padding="20,8" CornerRadius="4" Foreground="White"
                                Command="{Binding CancelSaveDialogCommand}"/>
                        <Button Content="Save" 
                                Background="#ffffff" Foreground="#000000"
                                BorderThickness="0" Padding="20,8" CornerRadius="4" FontWeight="SemiBold"
                                Command="{Binding SaveToSelectedCollectionCommand}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>

        <!-- Close Confirmation Dialog -->
        <Border Grid.Row="0" Grid.RowSpan="2" 
                Background="#CC000000" 
                IsVisible="{Binding IsCloseConfirmDialogOpen}"
                ZIndex="1003">
            <Border Background="#0f0f0f" BorderBrush="#2a2a2a" BorderThickness="2" 
                    CornerRadius="8" Padding="20" MaxWidth="400"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid RowDefinitions="Auto,Auto,Auto">
                    <TextBlock Grid.Row="0" Text="Unsaved Changes" FontSize="18" FontWeight="SemiBold" 
                               Foreground="White" Margin="0,0,0,12"/>

                    <TextBlock Grid.Row="1" Text="This request has unsaved changes. Do you want to save before closing?" 
                               FontSize="13" Foreground="#ccc" TextWrapping="Wrap" Margin="0,0,0,20"/>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="12" HorizontalAlignment="Right">
                        <Button Content="Don't Save" 
                                Background="#141414" BorderBrush="#2a2a2a" BorderThickness="1"
                                Padding="16,8" CornerRadius="4" Foreground="White"
                                Command="{Binding ConfirmCloseTabCommand}"/>
                        <Button Content="Cancel" 
                                Background="#141414" BorderBrush="#2a2a2a" BorderThickness="1"
                                Padding="16,8" CornerRadius="4" Foreground="White"
                                Command="{Binding CancelCloseTabCommand}"/>
                        <Button Content="Save" 
                                Background="#ffffff" Foreground="#000000"
                                BorderThickness="0" Padding="20,8" CornerRadius="4" FontWeight="SemiBold"
                                Command="{Binding SaveAndCloseTabCommand}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>

        <!-- Header -->
        <Border Grid.Row="0" Background="#000000" BorderBrush="#1a1a1a" BorderThickness="0,0,0,1" Padding="20,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="10">
                    <Border Width="32" Height="32" CornerRadius="6" Background="White">
                        <TextBlock Text="2IQ" FontSize="16" FontWeight="Bold" 
                                   Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="2IQSnorpulator" FontSize="18" FontWeight="SemiBold" 
                               Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Header Actions -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="12">
                    <!-- Environment Selector -->
                    <Border BorderBrush="#2a2a2a" BorderThickness="1" CornerRadius="6" Padding="2">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <ComboBox SelectedItem="{Binding SelectedEnvironment}" 
                                      ItemsSource="{Binding Environments}"
                                      Classes="dark-combo" MinWidth="120"
                                      Padding="8,6" CornerRadius="4"
                                      ToolTip.Tip="Select environment">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Name}" FontSize="13"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <Button Content="âš™" Classes="header-btn" Padding="8,6" FontSize="14"
                                    Command="{Binding ToggleManageEnvironmentsCommand}"
                                    ToolTip.Tip="Manage environments"/>
                        </StackPanel>
                    </Border>
                    
                    <Button Content="ðŸ’¾ Save" Classes="header-btn"
                            Command="{Binding SaveActiveRequestCommand}"
                            ToolTip.Tip="Save current request (Ctrl+S)"/>
                    <Button Content="Import" Classes="header-btn"/>
                    <Button Content="Export" Classes="header-btn"/>
                    <Button Content="Settings" Classes="header-btn"/>
                    <Button Content="+ New Request" Classes="header-btn primary-btn" 
                            Command="{Binding AddNewTabCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Container -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Border Grid.Column="0" Background="#0f0f0f" BorderBrush="#1a1a1a" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Sidebar Tabs -->
                    <Border Grid.Row="0" Background="#000000" BorderBrush="#1a1a1a" BorderThickness="0,0,0,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0"
                                    Background="{Binding SelectedSidebarTab, Converter={StaticResource TabBackgroundConverter}, ConverterParameter=Collections}"
                                    BorderThickness="0,0,0,2"
                                    BorderBrush="{Binding SelectedSidebarTab, Converter={StaticResource TabBorderConverter}, ConverterParameter=Collections}"
                                    Padding="12"
                                    Command="{Binding SelectSidebarTabCommand}" CommandParameter="Collections">
                                <TextBlock Text="Collections" 
                                           FontSize="13"
                                           Foreground="{Binding SelectedSidebarTab, Converter={StaticResource TabForegroundConverter}, ConverterParameter=Collections}"/>
                            </Button>
                            
                            <Button Grid.Column="1"
                                    Background="{Binding SelectedSidebarTab, Converter={StaticResource TabBackgroundConverter}, ConverterParameter=History}"
                                    BorderThickness="0,0,0,2"
                                    BorderBrush="{Binding SelectedSidebarTab, Converter={StaticResource TabBorderConverter}, ConverterParameter=History}"
                                    Padding="12"
                                    Command="{Binding SelectSidebarTabCommand}" CommandParameter="History">
                                <TextBlock Text="History" 
                                           FontSize="13"
                                           Foreground="{Binding SelectedSidebarTab, Converter={StaticResource TabForegroundConverter}, ConverterParameter=History}"/>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Sidebar Content -->
                    <ScrollViewer Grid.Row="1" Padding="16">
                        <Grid>
                            <!-- Collections Content -->
                            <StackPanel Spacing="8" IsVisible="{Binding IsCollectionsTabSelected}">
                                <Grid Margin="0,0,0,12">
                                    <TextBlock Text="MY COLLECTIONS" FontSize="12" Foreground="#666" 
                                               FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    <Button Content="+ New" Classes="header-btn" 
                                            Padding="6,4" FontSize="11" HorizontalAlignment="Right"
                                            Command="{Binding StartCreatingCollectionCommand}"/>
                                </Grid>

                                <!-- Create Collection Input -->
                                <Border Background="#141414" BorderBrush="#1a1a1a" BorderThickness="1" 
                                        CornerRadius="6" Padding="8" Margin="0,0,0,8"
                                        IsVisible="{Binding IsCreatingCollection}">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <TextBox Grid.Column="0" Text="{Binding NewCollectionName}" 
                                                 Classes="dark-input" Watermark="Collection name..."
                                                 Padding="6,4" FontSize="13" AcceptsTab="False"/>
                                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="4" Margin="4,0,0,0">
                                            <Button Content="âœ“" Background="#1a4d2e" Foreground="#4ade80"
                                                    BorderThickness="0" Padding="8,4" CornerRadius="4"
                                                    Command="{Binding CreateCollectionCommand}"/>
                                            <Button Content="âœ•" Background="#4d1a1a" Foreground="#f87171"
                                                    BorderThickness="0" Padding="8,4" CornerRadius="4"
                                                    Command="{Binding CancelCreatingCollectionCommand}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                                
                                <ItemsControl ItemsSource="{Binding Collections}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="0,0,0,4">
                                                <!-- Collection Header -->
                                                <Border Background="#141414" BorderBrush="#1a1a1a" BorderThickness="1" 
                                                        CornerRadius="6" Padding="12,10" Cursor="Hand"
                                                        PointerPressed="CollectionHeader_PointerPressed">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Grid.Column="0" 
                                                                   Text="{Binding IsExpanded, Converter={StaticResource ExpandIconConverter}}" 
                                                                   FontSize="12" Foreground="#888" Margin="0,0,8,0"
                                                                   VerticalAlignment="Center"/>
                                                        
                                                        <StackPanel Grid.Column="1">
                                                            <TextBlock Text="{Binding Name}" FontSize="14" 
                                                                       FontWeight="SemiBold" Foreground="White"/>
                                                            <TextBlock Text="{Binding RequestCount, StringFormat='{}{0} requests'}" 
                                                                       FontSize="12" Foreground="#666" Margin="0,4,0,0"/>
                                                        </StackPanel>

                                                        <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="4">
                                                            <Button Content="ðŸ—‘" Background="Transparent" BorderThickness="0"
                                                                    Padding="6,4" Foreground="#888" FontSize="12"
                                                                    Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).DeleteCollectionCommand}"
                                                                    CommandParameter="{Binding}"
                                                                    ToolTip.Tip="Delete collection"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>

                                                <!-- Requests List (when expanded) -->
                                                <StackPanel Margin="12,4,0,0" IsVisible="{Binding IsExpanded}">
                                                    <ItemsControl ItemsSource="{Binding Requests}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Border Background="#0f0f0f" BorderBrush="#1a1a1a" BorderThickness="1" 
                                                                        CornerRadius="4" Padding="8,6" Margin="0,0,0,4" Cursor="Hand"
                                                                        PointerPressed="RequestItem_PointerPressed">
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="Auto"/>
                                                                            <ColumnDefinition Width="*"/>
                                                                            <ColumnDefinition Width="Auto"/>
                                                                        </Grid.ColumnDefinitions>

                                                                        <Border Grid.Column="0" Background="{Binding MethodColor}" 
                                                                                Padding="4,2" CornerRadius="3" Margin="0,0,6,0">
                                                                            <TextBlock Text="{Binding Method}" FontSize="10" 
                                                                                       Foreground="{Binding MethodTextColor}" FontWeight="SemiBold"/>
                                                                        </Border>

                                                                        <TextBlock Grid.Column="1" Text="{Binding Name}" FontSize="12" 
                                                                                   Foreground="#e0e0e0" VerticalAlignment="Center"/>

                                                                        <Button Grid.Column="2" Content="Ã—" 
                                                                                Background="Transparent" BorderThickness="0"
                                                                                Padding="6,2" Foreground="#666" FontSize="14"
                                                                                Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).DeleteRequestCommand}"
                                                                                CommandParameter="{Binding}"/>
                                                                    </Grid>
                                                                </Border>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                    
                                                    <!-- Add Request Button -->
                                                    <Button Content="+ Add Request" 
                                                            Background="#141414" BorderBrush="#2a2a2a" BorderThickness="1" 
                                                            CornerRadius="4" Padding="8,6" Margin="0,4,0,0"
                                                            Foreground="#4ade80" FontSize="12" FontWeight="SemiBold"
                                                            HorizontalAlignment="Stretch"
                                                            Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).AddRequestToCollectionCommand}"
                                                            CommandParameter="{Binding}"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>

                            <!-- History Content -->
                            <StackPanel Spacing="8" IsVisible="{Binding !IsCollectionsTabSelected}">
                                <Grid Margin="0,0,0,12">
                                    <TextBlock Text="RECENT REQUESTS" FontSize="12" Foreground="#666" 
                                               FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    <StackPanel Orientation="Horizontal" Spacing="4" HorizontalAlignment="Right">
                                        <Button Content="â†»" Classes="header-btn" 
                                                Padding="6,4" FontSize="13"
                                                Command="{Binding RefreshHistoryCommand}"
                                                ToolTip.Tip="Refresh history"/>
                                        <Button Content="Clear" Classes="header-btn" 
                                                Padding="6,4" FontSize="11"
                                                Command="{Binding ClearHistoryCommand}"
                                                ToolTip.Tip="Clear all history"/>
                                    </StackPanel>
                                </Grid>
                                
                                <ItemsControl ItemsSource="{Binding History}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#141414" BorderBrush="#1a1a1a" BorderThickness="1" 
                                                    CornerRadius="6" Padding="12,10" Margin="0,0,0,8" Cursor="Hand"
                                                    PointerPressed="HistoryItem_PointerPressed">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel Grid.Column="0">
                                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                                            <Border Background="{Binding MethodColor}" 
                                                                    Padding="4,2" CornerRadius="4">
                                                                <TextBlock Text="{Binding Method}" FontSize="11" 
                                                                           Foreground="{Binding MethodTextColor}" FontWeight="SemiBold"
                                                                           VerticalAlignment="Center"/>
                                                            </Border>
                                                            <TextBlock Text="{Binding Name}" FontSize="13" 
                                                                       Foreground="White" VerticalAlignment="Center"/>
                                                        </StackPanel>
                                                        <TextBlock Text="{Binding Url}" FontSize="12" 
                                                                   Foreground="#888" Margin="0,4,0,0" 
                                                                   TextTrimming="CharacterEllipsis"/>
                                                        <TextBlock Text="{Binding TimeAgo}" FontSize="11" 
                                                                   Foreground="#666" Margin="0,4,0,0"/>
                                                    </StackPanel>

                                                    <Button Grid.Column="1" Content="Ã—" 
                                                            Background="Transparent" BorderThickness="0"
                                                            Padding="6,2" Foreground="#666" FontSize="16"
                                                            VerticalAlignment="Top"
                                                            Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).DeleteHistoryEntryCommand}"
                                                            CommandParameter="{Binding}"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Content Area -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Tabs Bar -->
