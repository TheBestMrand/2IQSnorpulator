                                                                    <Run Text="{}{$" /><Run Text="{Binding}" /><Run Text="}" />
                                                                </TextBlock>
                                                                <TextBlock Grid.Column="1" Text="or !" FontSize="10" Foreground="#666" Margin="4,0,0,0"/>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Response Area -->
                        <Border Background="#0f0f0f" BorderBrush="#1a1a1a" BorderThickness="1" 
                                CornerRadius="6" Padding="16" Height="400">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Response Header -->
                                <Grid Grid.Row="0" Margin="0,0,0,16">
                                    <StackPanel Orientation="Horizontal" Spacing="20" HorizontalAlignment="Left">
                                        <Border Background="{Binding ResponseStatusColor}" 
                                                Padding="8,4" CornerRadius="4">
                                            <TextBlock Text="{Binding ResponseStatus}" FontSize="12" 
                                                       FontWeight="SemiBold" Foreground="{Binding ResponseStatusTextColor}"/>
                                        </Border>
                                        <TextBlock Text="{Binding ResponseTime, StringFormat='{}{0}ms'}" 
                                                   FontSize="13" Foreground="#888" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding ResponseSize}" 
                                                   FontSize="13" Foreground="#888" VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Spacing="16" HorizontalAlignment="Right">
                                        <Button Background="Transparent" BorderThickness="0,0,0,2"
                                                BorderBrush="{Binding SelectedResponseTab, Converter={StaticResource TabBorderConverter}, ConverterParameter=Body}"
                                                Padding="12,6"
                                                Command="{Binding SelectResponseTabCommand}" CommandParameter="Body">
                                            <TextBlock Text="Body" FontSize="13"
                                                       Foreground="{Binding SelectedResponseTab, Converter={StaticResource TabForegroundConverter}, ConverterParameter=Body}"/>
                                        </Button>
                                        <Button Background="Transparent" BorderThickness="0,0,0,2"
                                                BorderBrush="{Binding SelectedResponseTab, Converter={StaticResource TabBorderConverter}, ConverterParameter=RespHeaders}"
                                                Padding="12,6"
                                                Command="{Binding SelectResponseTabCommand}" CommandParameter="RespHeaders">
                                            <TextBlock Text="Headers" FontSize="13"
                                                       Foreground="{Binding SelectedResponseTab, Converter={StaticResource TabForegroundConverter}, ConverterParameter=RespHeaders}"/>
                                        </Button>
                                        <Button Background="Transparent" BorderThickness="0,0,0,2"
                                                BorderBrush="{Binding SelectedResponseTab, Converter={StaticResource TabBorderConverter}, ConverterParameter=Cookies}"
                                                Padding="12,6"
                                                Command="{Binding SelectResponseTabCommand}" CommandParameter="Cookies">
                                            <TextBlock Text="Cookies" FontSize="13"
                                                       Foreground="{Binding SelectedResponseTab, Converter={StaticResource TabForegroundConverter}, ConverterParameter=Cookies}"/>
                                        </Button>
                                        <Button Background="Transparent" BorderThickness="0,0,0,2"
                                                BorderBrush="{Binding SelectedResponseTab, Converter={StaticResource TabBorderConverter}, ConverterParameter=RespTests}"
                                                Padding="12,6"
                                                Command="{Binding SelectResponseTabCommand}" CommandParameter="RespTests">
                                            <TextBlock Text="Tests" FontSize="13"
                                                       Foreground="{Binding SelectedResponseTab, Converter={StaticResource TabForegroundConverter}, ConverterParameter=RespTests}"/>
                                        </Button>
                                    </StackPanel>
                                </Grid>

                                <!-- Response Content Area - Fixed Width Container -->
                                <Border Grid.Row="1" ClipToBounds="True">
                                    <Grid>
                                        <!-- Response Body - Using AvaloniaEdit -->
                                        <Border Background="#000000" BorderBrush="#1a1a1a" BorderThickness="1" 
                                                CornerRadius="4" Padding="12"
                                                IsVisible="{Binding SelectedResponseTab, Converter={StaticResource TabVisibilityConverter}, ConverterParameter=Body}">
                                            <avaloniaEdit:TextEditor Name="ResponseEditor"
                                                                     Document="{Binding ResponseDocument}"
                                                                     SyntaxHighlighting="{Binding ResponseSyntaxHighlighting}"
                                                                     IsReadOnly="True"
                                                                     Background="Transparent"
                                                                     FontFamily="Courier New" 
                                                                     FontSize="13"
                                                                     ShowLineNumbers="True"
                                                                     WordWrap="True"
                                                                     HorizontalScrollBarVisibility="Disabled"
                                                                     VerticalScrollBarVisibility="Auto"
                                                                     ClipToBounds="True"/>
                                        </Border>

                                        <!-- Response Headers -->
                                        <Border Background="#000000" BorderBrush="#1a1a1a" BorderThickness="1" 
                                                CornerRadius="4" Padding="16"
                                                IsVisible="{Binding SelectedResponseTab, Converter={StaticResource TabVisibilityConverter}, ConverterParameter=RespHeaders}">
                                            <ScrollViewer>
                                                <ItemsControl ItemsSource="{Binding ResponseHeaders}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Grid Margin="0,0,0,8">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="200"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock Grid.Column="0" Text="{Binding Key}" 
                                                                           FontFamily="Courier New" FontSize="13" 
                                                                           Foreground="#4ade80" FontWeight="SemiBold"/>
                                                                <TextBlock Grid.Column="1" Text="{Binding Value}" 
                                                                           FontFamily="Courier New" FontSize="13" 
                                                                           Foreground="#60a5fa" TextWrapping="Wrap" Margin="16,0,0,0"/>
                                                            </Grid>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </ScrollViewer>
                                        </Border>

                                        <!-- Response Cookies -->
                                        <Border Background="#000000" BorderBrush="#1a1a1a" BorderThickness="1" 
                                                CornerRadius="4" Padding="16"
                                                IsVisible="{Binding SelectedResponseTab, Converter={StaticResource TabVisibilityConverter}, ConverterParameter=Cookies}">
                                            <ScrollViewer>
                                                <TextBlock Text="{Binding ResponseCookies}" 
                                                           FontFamily="Courier New" FontSize="13" 
                                                           Foreground="#888" TextWrapping="Wrap"/>
                                            </ScrollViewer>
                                        </Border>

                                        <!-- Response Tests -->
                                        <Border Background="#000000" BorderBrush="#1a1a1a" BorderThickness="1" 
                                                CornerRadius="4" Padding="16"
                                                IsVisible="{Binding SelectedResponseTab, Converter={StaticResource TabVisibilityConverter}, ConverterParameter=RespTests}">
                                            <ScrollViewer>
                                                <TextBlock Text="Test results will appear here..." 
                                                           FontFamily="Courier New" FontSize="13" 
                                                           Foreground="#888" TextWrapping="Wrap"/>
                                            </ScrollViewer>
                                        </Border>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</Window>